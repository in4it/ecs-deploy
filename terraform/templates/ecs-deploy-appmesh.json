[
    {
      "name": "ecs-deploy",
      "image": "in4it/ecs-deploy:${ECS_DEPLOY_VERSION}",
      "cpu": 128,
      "memoryReservation": 64,
      "essential": true,
      "mountPoints": [],
      "portMappings": [
        {
          "containerPort": 8080
        }
      ],
      "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "ecs-deploy",
                "awslogs-region": "${AWS_REGION}",
                "awslogs-stream-prefix": "ecs-deploy"
            }
      },
      "environment": [
        {
          "name": "DEBUG",
          "value": "${DEBUG}"
        },
        {
          "name": "AWS_REGION",
          "value": "${AWS_REGION}"
        },
        {
          "name": "AWS_ENV_PATH",
          "value": "/${CLUSTER_NAME}-${ENVIRONMENT}/ecs-deploy/"
        },
        { 
          "name": "PARAMSTORE_ENABLED",
          "value": "${PARAMSTORE_ENABLED}"
        }
      ]
    },
    {
        "name" : "envoy",
        "image" : "111345817488.dkr.ecr.${AWS_REGION}.amazonaws.com/aws-appmesh-envoy:${APPMESH_ENVOY_RELEASE}",
        "essential" : true,
        "environment" : [
          {
              "name" : "APPMESH_VIRTUAL_NODE_NAME",
              "value" : "mesh/${APPMESH_NAME}/virtualNode/ecs-deploy"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "ecs-deploy",
            "awslogs-region": "${AWS_REGION}",
            "awslogs-stream-prefix": "ecs-deploy-envoy"
          }
        },
        "healthCheck" : {
          "command" : [
              "CMD-SHELL",
              "curl -s http://localhost:9901/server_info | grep state | grep -q LIVE"
          ],
          "interval" : 5,
          "retries" : 3,
          "startPeriod" : 10,
          "timeout" : 2
        },
        "memory" : 512,
        "user" : "1337"
    }
  ]
  